<h1>Listing users</h1>
<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Username</th>
    <th>E-mail</th>
    <th></th>
    <th></th>
    <th></th>
    <th>Godkännandestatus</th>
    <th>Roller</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= mail_to user.email %></td>
        <td><%= link_to 'Visa', user %></td>
        <td><%= link_to 'Ändra', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
        <td>
          <% if user.approved? %>
              Godkänd
          <% else %>
              <% if current_user.has_role? :admin %>
                  <%= link_to 'Approve!', approve_user_path(user) %>
              <% else %>
                  Inte godkänd
              <% end %>
          <% end %>

        </td>

        <td>
          <% user.roles.each { |r| %>
              <%= r.name %>
          <% } %>
        </td>
      </tr>
  <% end %>
</table>

<div id="players-wrapper">

  <% @users.each do |user| %>

      <div class="player-container">
        <div class="player-base-info-container">
          <div class="player-picture" style="background: #f5f5f5;">
            <%= image_tag 'player-pics/nippe.jpg' %>
          </div>
          <div class="player-base-info">
            <h2><%= user.full_name %></h2>
            <br/>
            E-post: <%=	mail_to(user.email) %> 
            <br/>
            Mobil: <a href="callto:<%= user.mobile_phone %>"><%= user.mobile_phone %></a>
            <br/>
            <label for="nippe_active">Aktiv:</label> <input id="nippe_active" name="nippe_active"
                                                            type="checkbox"
                                                            checked="checked"/>
            <br/>
            Position: <%= user.player_type_id %>
            <div style="text-align: right; width: 95%;">
               <% if user.approved? %>
              Godkänd
          <% else %>
              <% if current_user.has_role? :admin %>
                  <%= link_to 'Approve!', approve_user_path(user) %>
              <% else %>
                  Inte godkänd
              <% end %>
          <% end %>
            </div>
          </div>

        </div>

        <!--<div class="player-more-info">-->
        <!--<a href="#">Mer info <img src="images/indicators/arrow_state_blue_expanded.png" border="0" alt=""/></a>-->
        <!--</div>-->

        <!--<div class="player-extra-info-collapsable">-->
        <!--dölfjöl <br />-->
        <!--yhgfdsgfd <br />-->
        <!--gfdsfgds <br />-->
        <!--fgdsa <br />-->
        <!--</div>-->

      </div>


  <% end %>

</div>
