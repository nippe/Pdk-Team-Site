<%= javascript_include_tag 'players' %>
<%= stylesheet_link_tag 'player' %>

<p id="notice"><%= notice %></p>

<div id="player">
  <div id="top_block">

       <div id="picture">
        <%= image_tag @player.picture_url, {:width => "130px"} %>
       </div>
       <div id="name">
        <h1> <%= @player.first_name %> <%= @player.last_name%> </h1>
       </div>

      <div id="username">
        <b>Username: </b> <%= @player.username %>
      </div>

    </div>

  <div id="info_accordian">

    <h3>Telefon</h3>
    <div>
      <p>
          <b>Hem:</b>
          <%= @player.home_phone %>
        </p>

        <p>
          <b>Mobil:</b>
          <%= @player.mobile_phone %>
        </p>

        <p>
          <b>Arbete:</b>
          <%= @player.work_phone %>
        </p>
    </div>


    <h3>Adress info</h3>
    <div>
         <p>
           <%= @player.street_address %>
         </p>

         <p>
           <%= @player.zip_code %> <%= @player.living_area %>
         </p>

    </div>


    <h3>Digital</h3>
    <div>
        <p>
          <b>Email:</b>
          <%= @player.email %>
        </p>
    </div>

    <h3>&Ouml;vrigt</h3>
    <div>
        <p>
          <b>Personal number:</b>
          <%= @player.personal_number %>
        </p>

        <p>
          <b>Goals:</b>
          <%= @player.goals %>
        </p>

        <p>
          <b>Wants reminders:</b>
          <%= @player.wants_reminders %>
        </p>
        <p>
          <b>Reminder time:</b>
          <%= @player.reminder_time %>
        </p>

        <p>
          <b>Player type:</b>
          <%= @player.player_type_id %>
        </p>
    </div>


  </div>




  <div id="address">

  </div>
</div>


<p>
  <b>Player type:</b>
  <%= @player.player_type_id %>
</p>


<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
