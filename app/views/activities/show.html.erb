<h1><%= @activity.name%></h1>

<div id="activity-info-wrapper" class="activity-section collapsible-container">
    <div id="time-info-wrapper">
        <p>Tid: <strong><%= @activity.start_at.strftime("%H:%M") if !@activity.all_day %></strong></p>

        <p>Datum: <strong><%= @activity.display_date%></strong></p>

        <p>Plats: <strong>Högdalen</strong></p>
    </div>

    <div id="attendee-info-wrapper">

        <select id="rvsp-12" class="rvsp-dropdown background-green" style="width: 140px;">
            <option value="1" selected="SELECTED">Kommer</option>
            <option value="2">Kanske</option>
            <option value="3">Kommer inte</option>
            <option value="4" disabled="DISABLED">Ejsvarat</option>
        </select>

        <br/>
        <br/>


        <div id="bars-12" class="bars-container" style="width: 130px;">
            <div class="activity-attendance-detail">
                <br/>
