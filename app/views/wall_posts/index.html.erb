<h1>Forum</h1>

<div id="forum-new-post-link">
    <%= link_to 'New Wall post', new_wall_post_path %>
</div>

<br />
<div id="forum-container">
  <% @wall_posts.each do |wall_post| %>
      <div class="post-container">
        <span class="post-date"><%= wall_post.created_at %></span> 
        <span class="post-header">Sa <%= wall_post.user.first_name %> att: </span>


        <p><%= raw(Sanitize.clean(wall_post.body, Sanitize::Config::BASIC)) %></p>
      </div>
  <% end %>
</div>



