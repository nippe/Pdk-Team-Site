<!DOCTYPE html>
<html>
<head>
  <title>Pdk Team Site</title>
  <%= stylesheet_link_tag 'screen' %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag 'jquery-1.5.1.min', 'application' %>
  <%= stylesheet_link_tag 'themes/dot-luv/jquery-ui-1.8.10.custom' %>
  <%= javascript_include_tag 'jquery-ui-1.8.10.custom.min' %>

</head>
<body>

<div id="main">


  
  <div class="container">
  <div id="top-right">
      <% if current_user %>
          [<%= current_user.full_name %>]
          <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
          <%= link_to "Logout", :logout %>
      <% else %>
          <%= link_to "Registrera", new_user_path %> |
          <%= link_to 'Login', :login %>
      <% end %>
    </div>

  
    <div id="menu">
      <%=	request.path  %>
      <a href="/" title="PDK Team Site"><img src="/images/logo.png" alt="PDK Team Site" title="PDK Team Site"/></a>
      <ul>
        <li><a href="/" title="Home"  class="<%= 'active' if request.path.eql?('/') %>">Home</a></li>
        <li><a href="/users" title="Spelare" class="<%= 'active' if request.path.eql?('/users') %>">Spelare</a></li>
        <li><a href="/activities" title="Aktiviteter"  class="<%= 'active' if request.path.eql?('/activities') %>">Aktiviteter</a></li>
        <li><a href="/forum" title="Forum" class="<%= 'active' if request.path.eql?('/forum') %>">Forum</a></li>
        <li><a href="/calendar" title="Kalender" class="<%= 'active' if request.path.eql?('/calendar') %>">Kalender</a></li>
        <!--
        <li><a href="http://tools.chillwebdesigns.co.uk/" title="Online Tools">Online Tools</a></li>
        <li><a href="contact.html" title="Contact">Contact</a></li>
        -->
      </ul>

    </div>
    <div class="line"></div>





    <%= yield %>

  </div>
 </div>
</body>
</html>
